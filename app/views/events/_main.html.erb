<div class="main-wrap">
  <div class="events">
    <% @events.each do |event| %>
    <div class="event">
      <div class="event-img">
        <%= image_tag(event.image, class: 'event-image', width: 400, height: 400) if event.image.attached? %>
      </div>
      <p>
        <%= link_to "#{event.name}", event_path(event) %>
      </p>
      <p>
        主催者：<%= event.user.nickname %>
      </p>
      <ul>
        <li>
          <% event.tags.each do |tag| %>
            #<%= link_to tag.tag_name, events_path(tag_id: tag.id) %>
          <% end %>
        </li>
      </ul>
      </div>
    <% end %>
  </div>

  <%= link_to '戻る', root_path %>
</div>