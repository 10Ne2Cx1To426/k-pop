<%= form_with model: current_user, local: true do |f|%>
  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
   <%= f.label :nickname %><br />
   <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
   <%= f.label :text %><br />
   <%= f.text_field :text, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :image %><br/>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>